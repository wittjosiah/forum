<form action="/login" method="POST" class="max-w-lg mx-auto md:my-12 p-4 bg-gray-200 rounded-lg">
    <div class="flex flex-col mb-4">
        <label for="userId" class="text-sm font-bold p-1">User ID</label>
        <input id="userId" name="userId" type="text" placeholder="me@ctzn.one" class="rounded-sm p-2">
    </div>
    <div class="flex flex-col mb-4">
        <label for="password" class="text-sm font-bold p-1">Password</label>
        <input id="password" name="password" type="password" class="rounded-sm p-2">
    </div>
    <input type="submit" value="Login" class="w-full py-2 rounded-sm font-bold bg-gray-300 cursor-pointer hover:bg-gray-400">
</form>
